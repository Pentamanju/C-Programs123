#include <stdio.h>
int main()
{
	int rows,i,j,alpha=65,alpha1=97;
	printf("enter the rows: ");
	scanf("%d",&rows);
	for(i=0;i<rows;i++)
	{
		for(j=0;j<=i;j++)
		{
			printf("%c%c ",alpha++, alpha1++);
		}
		printf("\n");
	}
	return 0;
}


output1:
enter the rows: 5
Aa
Bb Cc
Dd Ee Ff
Gg Hh Ii Jj
Kk Ll Mm Nn Oo

output2:
enter the rows: 3
Aa
Bb Cc
Dd Ee Ff
